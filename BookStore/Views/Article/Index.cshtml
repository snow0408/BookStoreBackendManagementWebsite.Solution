@model  IEnumerable<BookStore.Models.ViewModels.ArticleIndexVm>
@{
    ViewBag.Title = "Index";
    IEnumerable<SelectListItem> Categories = ViewBag.Categories;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>
                        文章總覽
                    </h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="~/WeHome/Index">
                                <svg class="stroke-icon">
                                    <use href="../svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item"><a href="~/Article/Index">文章</a></li>
                        <li class="breadcrumb-item active"><a href="~/Article/Index">文章總覽</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="list-product-header">
                            <div>
                                <div class="light-box"><a data-bs-toggle="collapse" href="#collapseProduct" role="button" aria-expanded="false" aria-controls="collapseProduct"><i class="filter-icon show" data-feather="filter"></i><i class="icon-close filter-close hide"></i></a></div><a class="btn btn-primary" href="../Article/Create"><i class="fa fa-plus"></i>新增文章</a>
                            </div>
                            <div class="collapse" id="collapseProduct">
                                <div class="card card-body list-product-body">
                                    <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-2 g-3">
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">選擇ID</option>
                                                <option value="1">待實作</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">選擇類別</option>
                                                <option value="1">待實作</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">選擇日期</option>
                                                <option value="1">待實作</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">選擇.etc</option>
                                                <option value="1">待實作</option>
                                            </select>
                                        </div>
                                        @*<div class="col">
                                                <select class="form-select" aria-label="Default select example">
                                                    <option selected="">Price</option>
                                                    <option value="1">56000.00</option>
                                                </select>
                                            </div>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="list-product list-category">
                            <table class="table" id="project-status">
                                <thead>
                                    <tr>
                                        @*<th>
                                                <div class="form-check">
                                                    <input class="form-check-input checkbox-primary" type="checkbox">
                                                </div>
                                            </th>*@
                                        <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.ArticleID)  </span></th>
                                        <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.Title)</span></th>
                                        <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.PublishTime)</span></th>
                                        <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.Category)</span></th>
                                        <th> <span class="f-light f-w-600">操作</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="product-removes">
                                            @*<td>
                                                    <div class="form-check">
                                                        <input class="form-check-input checkbox-primary" type="checkbox">
                                                    </div>
                                                </td>*@
                                            <td>
                                                <div class="product-names">
                                                    @*<div class="light-product-box"><img class="img-fluid" src="../assets/images/product/1.png" alt="t-shirt"></div>*@
                                                    <p>@Html.DisplayFor(model => item.ArticleID)</p>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="f-light">@Html.DisplayFor(model => item.Title) </p>
                                            </td>
                                            <td> <span class="badge badge-light-primary">@Html.DisplayFor(model => item.PublishTime) </span></td>
                                            <td> <span class="badge badge-light-primary">@Html.DisplayFor(model => item.Category) </span></td>
                                            <td>
                                                <div class="product-action">
                                                    @Html.ActionLink("刪除", "Delete", new { id = item.ArticleID }, new { @class = "btn btn-danger btn-xs" })
                                                    @Html.ActionLink("編輯", "Edit", new { id = item.ArticleID }, new { @class = "btn btn-success btn-xs" })
                                                    @Html.ActionLink("詳情", "Details", new { id = item.ArticleID }, new { @class = "btn btn-info btn-xs disabled" })
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
}