@model IEnumerable<BookStore.Models.ViewModels.KeywordIndexVm>

@{
    ViewBag.Title = "Index";
}

<div class="page-title">
    <div class="row">
        <div class="col-6 d-flex align-items-center">
            <i class="fa-solid fa-book-open-reader" style="color: #7366ff; font-size:30px"></i>
            <h4 class="fw-bold" style="color: #7366ff;">&nbsp;&nbsp;關鍵字管理</h4>
        </div>
        <div class="col-6">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/WeHome/Index">
                        <svg class="stroke-icon">
                            <use href="~/svg/icon-sprite.svg#stroke-home"></use>
                        </svg>
                    </a>
                </li>
                <li class="breadcrumb-item">產品管理</li>
                <li class="breadcrumb-item active">關鍵字管理</li>
            </ol>
        </div>
    </div>
</div>



<div class="background-image">
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">

                            <div class=" justify-content-between">
                                @Html.ActionLink("新增關鍵字", "Create", null, new { @class = "btn btn-primary mb-2" })

                                <form class="d-flex align-items-end" method="get">
                                    <div class="d-flex align-items-end">
                                        <div class="container-1">
                                            @Html.TextBox("name", null, new { @class = "form-control", placeholder = "請輸入分類名稱", style = "background-color: #ebe6f5;" })
                                            <input type="submit" value="搜尋" style="display: inline; opacity: 0; position: absolute; left: -9999px;" />
                                            <span class="icon" onclick="submitForm()"><i class="fa fa-search" style="color: #a6a6a6"></i></span>
                                        </div>
                                    </div>
                                </form>

                            </div>

                            @*<form method="get" style="margin-bottom:10px">
                                    <label>關鍵詞名稱:</label>
                                    <div class="d-flex flex-row">

                                        <div class="col-4 me-3">
                                            @Html.TextBox("name", null, new { @class = "ms-1 form-control-inline me-2 form-control " })
                                        </div>
                                        <input type="submit" value="搜尋" class="btn btn-sm btn-primary" />
                                    </div>
                                </form>*@

                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr id="keyword-@item.Id">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td class="product-action">
                                            <a href="@Url.Action("Edit", new { id = item.Id })" class="">
                                                <i class="fas fa-pencil-alt" style="color: #2cb8bd; font-size: 17px;"></i>
                                            </a>
                                            &thinsp;
                                            <a href="javascript:void(0);" class="delete-btn" data-bs-toggle="modal" data-bs-target="#check-dele-@item.Id" data-id="@item.Id">
                                                <i class="fas fa-trash-alt" style="color: #f38181; font-size: 17px"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @foreach (var item in Model)
        {
            <div class="modal fade" id="check-dele-@item.Id" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title fs-5">刪除確認</h3>
                            <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body compose-modal">
                            <p>確定要刪除「@item.Name」嗎?</p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary delBtn" type="button" data-id="@item.Id" data-bs-dismiss="modal">刪除確定</button>
                            <button class="btn btn-light" type="button" data-bs-dismiss="modal">取消</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts{

    <script>
        const delBtn = document.querySelectorAll(".delBtn");

        delBtn.forEach((elem) => {
            elem.addEventListener("click", () => {

                let keywordId = elem.getAttribute("data-id")

                $.ajax({
                    url: `/api/KeywordsAPI/${keywordId}`,
                    type: "DELETE",
                    success: function (result) {
                        document.querySelector(`#keyword-${keywordId}`).innerHTML = "";
                    }
                });

            });
        })

    </script>
}
