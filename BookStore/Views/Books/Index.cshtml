@model IEnumerable<BookStore.Models.ViewModels.BooksIndexVm>

@{
    ViewBag.Title = "書籍資料";
}
<style>
    /* 這裡寫入你的 CSS 樣式 */


    @*.background-image {
        background-image: url('@Url.Content("~/images/inbg.jpg")');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
    }*@


    .product-action button {
        border: none;
        padding: 0;
        background-color: transparent;
        cursor: pointer;
    }

        .product-action button:hover {
            background-color: #007bff;
            color: #fff;
        }

    .product-action a.badge-primary {
        background-color: transparent;
        color: #28a745 !important;
    }

    .container-1 {
        position: relative;
    }

        .container-1 input[type="text"] {
            width: 100%;
            height: 38px;
            padding: 10px;
            font-size: 16px;
            border: none; /* 移除邊框 */
            border-radius: 30px;
            outline: none; /* 移除聚焦的邊框效果 */
            box-shadow: none;
        }

        .container-1 .icon {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }
</style>

<div class="background-image">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6 d-flex">
                    <i class="fa-solid fa-book-open-reader" style="color: #7366ff ; font-size:30px"></i>

                    <h4 class="fw-bold" style="color: #7366ff ">&nbsp;&nbsp;書籍管理列表</h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="~/WeHome/Index">
                                <svg class="stroke-icon">
                                    <use href="~/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">產品管理</li>
                        <li class="breadcrumb-item active">書籍管理列表</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">






                        <form>
                            <div class="d-flex justify-content-between align-items-end">
                                @Html.ActionLink("新增書籍", "Create", null, new { @class = "btn btn-primary" })


                                <div class="d-flex align-items-end">
                                    <div class="me-2">
                                        <label for="name" class="form-label">名稱:</label>
                                        <input type="text" id="name" name="Name" value="@ViewBag.Name" class="form-control" />
                                    </div>
                                    <div class="me-2">
                                        <label for="author" class="form-label">作者:</label>
                                        <input type="text" id="author" name="author" value="@ViewBag.Author" class="form-control" />
                                    </div>
                                    <input type="submit" value="查詢" class="btn btn-primary" />
                                </div>


                            </div>
                        </form>

                        <br/>

                        <table class="table">
                            <tr>
                                <th>
                                    <strong>書籍名稱</strong>

                                </th>
                                <th>
                                    <strong>作者</strong>

                                </th>
                                <th>
                                    <strong>分類</strong>

                                </th>
                                <th>
                                    <strong>語言</strong>

                                </th>

                                <th>
                                    <strong>操作</strong>
                                </th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr id="book-@item.Id">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Author)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Language)
                                    </td>

                                    <td class="product-action">
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="">
                                            <i class="fas fa-pencil-alt" style="color: #2cb8bd; font-size: 17px;"></i>
                                        </a>
                                        &thinsp;
                                        <a href="javascript:void(0);" class="delete-btn" data-bs-toggle="modal" data-bs-target="#check-dele-@item.Id" data-id="@item.Id">
                                            <i class="fas fa-trash-alt" style="color: #f38181; font-size: 17px"></i>
                                        </a>
                                    </td>

                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="modal fade" id="check-dele-@item.Id" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title fs-5">刪除確認</h3>
                        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body compose-modal">
                        <p>確定要刪除「@item.Name」嗎?</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary delBtn" type="button" data-id="@item.Id" data-bs-dismiss="modal">刪除確定</button>
                        <button class="btn btn-light" type="button" data-bs-dismiss="modal">取消</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

    @section Scripts{

        <script>
            const delBtn = document.querySelectorAll(".delBtn");

            delBtn.forEach((elem) => {
                elem.addEventListener("click", () => {

                    let bookId = elem.getAttribute("data-id")

                    //let flag = confirm("是否刪除此書籍");
                    //if (flag) {
                    $.get("/Books/Delete?id=" + bookId,
                        null,
                        function (result) {
                            document.querySelector(`#book-${bookId}`).innerHTML = "";
                        }
                    );
                    //}
                });
            })

        </script>

    }
