@model IEnumerable<BookStore.Models.ViewModels.PdInStockVm>
@using BookStore.Models.ViewModels

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">歷史進貨記錄</h3>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>產品ID</th>
                        <th>產品名稱</th>
                        <th>類別</th>
                        <th>數量</th>
                        <th>進貨日期</th>
                        <th>進貨價格</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model)
                    {
                        <tr>
                            <td>@record.ID</td>
                            <td>@record.ProductId</td>
                            <td>@record.ProductName</td>
                            <td>@record.CategoryName</td>
                            <td>@record.Qty</td>
                            <td>@record.BuyDate.ToString("yyyy-MM-dd")</td>
                            <td>@record.BuyPrice</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
