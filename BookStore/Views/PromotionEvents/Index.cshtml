@model IEnumerable<BookStore.Models.ViewModels.PromotionEventIndexVm>
@using BookStore.Models.Infrastructure
@{
    ViewBag.Title = "概覽活動";
    IEnumerable<SelectListItem> offerStatus = ViewBag.OfferStatusList;
    IEnumerable<SelectListItem> eventType = ViewBag.EventTypeList;
    IEnumerable<SelectListItem> discountType = ViewBag.DiscountTypeList;
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>
                    概覽活動
                </h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="~/WeHome/Index">
                            <svg class="stroke-icon">
                                <use href="../svg/icon-sprite.svg#stroke-home"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item"><a href="~/PromotionEvents/Index">活動</a></li>
                    <li class="breadcrumb-item active"><a href="~/PromotionEvents/Index">概覽活動</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->

<div class="container-fluid">
    <div class="row">
        <!-- Individual column searching (text inputs) Starts-->
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-body">
                        <h5>優惠券管理</h5><span>這裡可以管理優惠券的詳情</span>
                    </div>
                    <div class="col-md-12 project-list">
                        <div class="card">
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="nav nav-tabs border-tab" id="top-tab" role="tablist">
                                        <li class="nav-item"><a class="nav-link active" id="top-home-tab" data-bs-toggle="tab" href="#top-home" role="tab" aria-controls="top-home" aria-selected="true"><i data-feather="target"></i>全部</a></li>
                                        <li class="nav-item"><a class="nav-link" id="profile-top-tab" data-bs-toggle="tab" href="#top-profile" role="tab" aria-controls="top-profile" aria-selected="false"><i data-feather="info"></i>未啟用</a></li>
                                        <li class="nav-item"><a class="nav-link" id="contact-top-tab" data-bs-toggle="tab" href="#top-contact" role="tab" aria-controls="top-contact" aria-selected="false"><i data-feather="check-circle"></i>啟用中</a></li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-0 me-0"></div><a class="btn btn-primary" href="~/PromotionEvents/Create"> <i data-feather="plus-square"> </i>創建新的優惠券</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="list-product">
                        <table class="table" id="project-status">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="form-check">
                                            <input class="form-check-input checkbox-primary" type="checkbox">
                                        </div>
                                    </th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.EventSerialNumber)</span></th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.EventName)</span></th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.EventDescription)</span></th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.DiscountType) </span></th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.EventType)</span></th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.DiscountRate)</span></th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.OfferStatus)</span></th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.StartDate)</span></th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.EndDate)</span></th>
                                    <th> <span class="f-light f-w-600">操作</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="product-removes">
                                        <td>
                                            <div class="form-check">
                                                <input class="form-check-input checkbox-primary" type="checkbox">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-names">
                                                @*<div class="light-product-box"><img class="img-fluid" src="../assets/images/dashboard-8/product-categories/laptop.png" alt="laptop"></div>*@
                                                <p class="font-info"><b> @Html.DisplayFor(model => item.EventSerialNumber)</b></p>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="f-light">@Html.DisplayFor(model => item.EventName)</p>
                                        </td>
                                        <td>
                                            <p class="f-light">@Html.DisplayFor(model => item.EventDescription)</p>
                                        </td>
                                        <td>
                                            <p class="f-light">@Html.DisplayFor(model => item.EventType)</p>
                                        </td>
                                        <td>
                                            <p class="f-light">@Html.DisplayFor(model => item.DiscountType)</p>
                                        </td>
                                        <td>
                                            <p class="f-light">@Html.DisplayFor(model => item.DiscountRate)</p>
                                        </td>
                                        <td> <span class="badge badge-light-secondary">@Html.DisplayFor(model => item.OfferStatus)</span></td>
                                        <td>
                                            <p class="f-light">@Html.DisplayFor(model => item.StartDate)</p>
                                        </td>
                                        <td>
                                            <p class="f-light">@Html.DisplayFor(model => item.EndDate)</p>
                                        </td>
                                        <td>
                                            <div class="product-action">
                                                @Html.ActionLink("刪除", "Delete", new { id = item.EventID }, new { @class = "btn btn-danger btn-xs" })
                                                @Html.ActionLink("編輯", "Edit", new { id = item.EventID }, new { @class = "btn btn-success btn-xs" })
                                                @Html.ActionLink("詳情", "Details", new { id = item.EventID }, new { @class = "btn btn-info btn-xs disabled" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Individual column searching (text inputs) Ends-->
    </div>
</div>
<!-- Container-fluid Ends-->
