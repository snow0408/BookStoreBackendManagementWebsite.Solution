            @Html.EditorFor(model => model.BookStatus, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.BookStatus, "", new { @class = "text-danger" })
        </div>
    </div>
