@model BookStore.Models.ViewModels.UsedBookIndexVm

@{
    ViewBag.Title = "編輯二手書";
}

<h2>二手書</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>編輯</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="mb-3">
        @Html.LabelFor(model => model.MemberEmail, htmlAttributes: new { @class = "form-label col-md-2" })
