@model IEnumerable<BookStore.Models.ViewModels.UsedBookIndexVm>

@{
    ViewBag.Title = "二手書管理";
}



@*<p>
        @Html.ActionLink("新增", "Create",null ,new {@class="btn btn-success"})

    </p>*@
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="mb-3">二手書</h2>
                    <hr />
                    <form>
                        <div class="mb-2 d-flex flex-row">
                            <div class="me-2">
                                <label class="form-label" for="email">電子信箱:</label>
                                <input class="form-control" id="email" name="email" value="@ViewBag.Email" />
                            </div>
                            <div class="me-2">
                                <label class="form-label" for="ISBN">ISBN:</label>
                                <input class="form-control" id="ISBN" name="ISBN" value="@ViewBag.ISBN" />
                            </div>
                            <div class="me-2">
                                <label class="form-label" for="bookName">書名:</label>
                                <input class="form-control" id="bookName" name="bookName" value="@ViewBag.BookName" />
                            </div>

                            <div class="d-flex align-items-end">
                                <input type="submit" class="btn btn-primary " value="查詢" />
                            </div>

                        </div>
                    </form>


                    @*<form method="get" style="margin-bottom:10px">
                            會員Email: @Html.TextBox("email", null, new { @class = "ms-1 form-control-inline me-2" })
                            ISBN: @Html.TextBox("ISBN", null, new { @class = "ms-1 form-control-inline me-2" })
                            <input type="submit" value="搜尋" class="btn btn-sm btn-primary" />
                        </form>*@

                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MemberEmail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ISBN)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BookName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductStatus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BookStatus)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MemberEmail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ISBN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    <div class="form-check form-switch  form-check-inline">
                                        <input class="form-check-input switch-primary check-size pdStatus" data-id="@item.Id" type="checkbox" role="switch" checked="@item.ProductStatus">
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookStatus)
                                </td>
                                <td>

                                    @*@Html.ActionLink("編輯", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-success" })*@
                                    @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    
    <script>
        const pdStatuses = document.querySelectorAll(".pdStatus")
        

        pdStatuses.forEach((elem) => {
           
            const usedbookId = elem.getAttribute("data-id")
            const urlPut = `/api/UsedBooksAPI/${usedbookId}`
           
            elem.addEventListener("change", () => { 

                $.ajax({
                    url: urlPut,
                    type: "PUT",
                    contentType: "application/json",                    
                    data: JSON.stringify(elem.checked),
                    success: function () {
                    },
                    error: function () {
                        alert("更新失敗")
                    }
                });

            })

        })


    </script>

    }


