@section Scripts
{

    <script>
        const delBtn = document.querySelectorAll(".delBtn");

        delBtn.forEach((elem) => {
            elem.addEventListener("click", () => {

                let categoryId = elem.getAttribute("data-id")

                $.ajax({
                    url: `/api/CategoriesAPI/${categoryId}`,
                    type: "DELETE",
                    success: function (result) {
                        document.querySelector(`#category-${categoryId}`).innerHTML = "";
                    }
                });

            });
        })

    </script>

    <script>
        $(document).ready(function () {
            loadPartialView(1); // 在文檔準備就緒時加載初始頁面

            $(document).on("click", "#paginationContainer a", function () {
                var url = $(this).attr("href");
                var page = url.substring(url.lastIndexOf('/') + 1); // 從URL中提取頁數
                loadPartialView(page);
                return false;
            });
        });

        function loadPartialView(page) {
            $.ajax({
                url: "@Url.Action("Index", "Booksellers")?page=" + page, // 更新URL以匹配您的分頁控制器操作
                type: "GET",
                success: function (result) {
                    $("#partialViewContainer").html(result);
                }
            });
        }
    </script>


    @Scripts.Render("~/bundles/jqueryval")

    
